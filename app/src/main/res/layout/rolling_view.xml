<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tv_alarms"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/c_blue_gray"
    android:orientation="horizontal"
    >

  <TextView
      android:id="@+id/alarm_icon"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="{faw-bell}"
      android:textColor="@color/c_red"
      android:textSize="22sp"
      />
  <com.xiaosu.VerticalRollingTextView
      android:id="@+id/rolling_info"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:duration="1000"
      android:gravity="center"
      android:textColor="@color/c_yellow"
      android:textSize="20sp"
      app:animInterval="5000"
      />

</LinearLayout>
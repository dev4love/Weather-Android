<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <include layout="@layout/rolling_view"/>
  <android.support.v4.widget.DrawerLayout
      android:id="@+id/drawer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"
          android:background="@color/c_graph_bg_black"
          >
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/c_white_smoke"
            android:textSize="32sp"
            tools:text="海淀区，北京市"
            />

        <ImageView
            android:id="@+id/iv_curr"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/tv_city"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            tools:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_curr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/c_white_smoke"
            android:textSize="48sp"
            tools:text="晴转多云 26°"
            />
      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"
          android:background="@color/c_black_olive"
          android:orientation="vertical"
          >
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            app:tabIndicatorColor="@color/c_aero"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/c_grullo"
            app:tabTextColor="@color/c_acidgreen"
            >
        </android.support.design.widget.TabLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d6e6f1"
            />
        <cn.lovexiaov.weather.presentation.DecoratorViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

      </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/c_water_spout"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        />
  </android.support.v4.widget.DrawerLayout>
</LinearLayout>